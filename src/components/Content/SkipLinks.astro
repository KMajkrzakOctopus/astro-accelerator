---
import t from '@language/language.json';
import { Lang } from '@language/language';

// Properties
type Props = {
  lang: string;
}
const { lang } = Astro.props as Props;

// Language
const _ = Lang(lang);

// Logic
// -
---
<style>
  /* Skip Links */
nav {
    position: absolute;
}

a {
    clip: rect(0 0 0 0);
    background-color: var(--aft);
    min-width: 20vw;
    overflow: hidden;
    padding: 1rem;
    position: absolute;
    z-index: 15;
    text-align: center;
    display: inline-block;
    height: 1px;
    margin: -1px;
    width: 1px;
}

a:focus {
    clip: auto;
    height: auto;
    margin: 0.2em;
    overflow: visible;
    width: auto;
}

@media (max-width: 860px) {
}
</style>
<nav class="skip-links" aria-label={ _(t.aria.skiplinks) } id="site-top">
    <a href="#site-nav">{ _(t.skiplinks.skip_to_navigation) }</a>
    <a href="#site-main">{ _(t.skiplinks.skip_to_content) }</a>
    <a href="#site-footer">{ _(t.skiplinks.skip_to_footer) }</a>
  </nav>